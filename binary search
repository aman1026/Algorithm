#include<iostream.h>
int main()
{
int n,a[10],i,s,f,m,l;
cout<<"enter elements";
for(int i=0;i<n;i++)
{
cin>>a[i];
}
cout<<"enter no to search";
cin>>s;
f=0;
l=n-1;
m=(f+l)/2;
while(f<=l)
{
      if(a[m]<s)
      {
            f=m+1;
      }
      else if(a[m]==s)
      {
            cout<<s<<"found at location"<<m+1<<"\n";
      }
      else
      {
            l=m-1;
      }
      m=(f+l)/2;
}
if(f>l)
{
      cout<<s<<"not present in the list";
}
return 0;
}
